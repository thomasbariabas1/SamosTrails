<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/notificationbg" android:layout_width="fill_parent" android:layout_height="128.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/upperHeader">

    <ImageView
        android:id="@+id/status_bar_album_art"
        android:layout_width="@dimen/notification_expanded_height"
        android:layout_height="@dimen/notification_expanded_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/upperHeader" />

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="?android:listDivider"
        android:layout_toRightOf="@id/status_bar_album_art"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:showDividers="middle"
        android:dividerPadding="12.0dip">
        <LinearLayout
            android:background="@color/upperHeader"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/play_controls_notification"
            android:scaleType="fitCenter"
            android:layout_weight="1.0"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:text="Distance"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/distancenotification"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".5" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/status_bar_recordinglayout"
            android:layout_height="wrap_content"
            android:layout_width="0.0dip"
            android:layout_weight="2.0"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/status_bar_recording"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/recording"
            android:layout_weight="1.0"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/status_bar_recording_text"
            android:layout_height="wrap_content"
            android:layout_width="0.0dip"
            android:layout_weight="1.0"
            android:textSize="30sp"
            android:textColor="#fff"
            android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <Chronometer
        android:id="@+id/chronometer"
        android:background="@color/upperHeader"
        android:padding="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/apollo_holo_dark_notifiation_bar_collapse"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#fff"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/textarea"
        android:paddingStart="@dimen/notification_padding"
        android:paddingTop="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/chronometer"
        android:layout_toEndOf="@id/status_bar_album_art"
        android:layout_alignParentTop="true"
        android:background="@color/upperHeader">
        <TextView
            android:ellipsize="marquee"
            android:layout_gravity="start"
            android:id="@+id/status_bar_track_name"
            android:focusable="true"
            android:fadingEdge="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            />
        <TextView
            android:ellipsize="marquee"
            android:layout_gravity="start"
            android:id="@+id/status_bar_recordingstatus"
            android:fadingEdge="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#fff"
            />

    </LinearLayout>
</RelativeLayout>